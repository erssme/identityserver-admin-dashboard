

@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.FindFirst("name")?.Value;
    }
}
<html !DOCTYPE>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


   
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="http://code.getmdl.io/1.3.0/material.light_green-deep_purple.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
            <div class="mdl-layout__header-row">
                <!-- Title -->
                <span class="mdl-layout-title">IDENTITY SERVER</span>
                <!-- Add spacer, to align navigation to the right -->
                <div class="mdl-layout-spacer"></div>
                <!-- Navigation. We hide it in small screens. -->
                <nav class="mdl-navigation mdl-layout--large-screen-only">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="mdl-navigation__link">HOME</a>
                    <a asp-area="" asp-controller="Home" asp-action="About" class="mdl-navigation__link" >ABOUT</a>
                    <a href="/getting-started" class="mdl-navigation__link">GETTING STARTED</a>
                    @if(name != null){
                        <a asp-area="" asp-controller="Account" asp-action="Login" class="mdl-navigation__link">@name</a>
                        <button id="demo-menu-lower-right"
                                class="mdl-button mdl-js-button mdl-button--icon">
                            <i class="material-icons">more_vert</i>
                        </button>

                        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                            for="demo-menu-lower-right">
                            <li class="mdl-menu__item"><a asp-area="" asp-controller="Account" asp-action="Logout" class="mdl-navigation__link" >LOG OUT</a></li>
                  
                        </ul>
                    }
                    else
                    {
                         <a asp-area="" asp-controller="Account" asp-action="Login" class="mdl-navigation__link">LOG IN</a>
                    }
                    
                   
                </nav>
            </div>
        </header>
        <div class="mdl-layout__drawer">
            <span class="mdl-layout-title">Identity Server</span>
            <nav class="mdl-navigation">
                <a asp-controller="Home" asp-action="Index" class="mdl-navigation__link">HOME</a>
                <a asp-controller="Home" asp-action="About" class="mdl-navigation__link">ABOUT</a>
                <a class="mdl-navigation__link" href="">GETTING STARTED</a>
                <a class="mdl-navigation__link" href="">CLIENT LOGIN</a>
                <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="mdl-navigation__link">ADMIN LOGIN</a>
            </nav>
        </div>
        <main class="mdl-layout__content">
            <div class="page-content">@RenderBody()</div>
        </main>
    </div>
    <script src="http://code.getmdl.io/1.3.0/material.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
